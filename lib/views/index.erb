<html>
  <body>
    <h2>Tic-Tac-Toe</h2>
    <form method='post' action='/game'>
      <h4>Game mode:</h4>
      <input type='radio' id='cpu' value='cpu' name='mode' checked>Human vs CPU</input>
      </br>
      <input type='radio' id='human' value='human' name='mode'>Human vs Human</input>
      </br>
      <h4>Grid size:</h4>
      <input type='radio' id='3x3' value='3x3' name='size' checked>3x3</input>
      </br>
      <input type='radio' id='4x4' value='4x4' name='size'>4x4</input>
      </br>
      </br>
      <input type='submit' value='Start' />
    </form>
  </body>
</html>